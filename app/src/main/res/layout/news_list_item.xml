<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">


    <ImageView
        android:id="@+id/news_item_thumbnail"
        android:layout_width="75dp"
        android:layout_height="75dp"
        android:layout_centerVertical="true"
        android:padding="10dp"
        android:src="@drawable/no_image" />

    <TextView
        android:id="@+id/news_item_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignTop="@+id/news_item_thumbnail"
        android:layout_toRightOf="@id/news_item_thumbnail"
        android:ellipsize="end"
        android:maxLines="2"
        android:text="@string/no_title"
        android:textColor="@android:color/black"
        android:textSize="18sp" />

    <TextView
        android:id="@+id/news_item_description"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_below="@+id/news_item_title"
        android:layout_toRightOf="@id/news_item_thumbnail"
        android:ellipsize="end"
        android:maxLines="3"
        android:text="@string/no_description"
        android:textColor="@android:color/black"
        android:textSize="14sp" />

</RelativeLayout>